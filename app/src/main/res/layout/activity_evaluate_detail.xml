<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jyt.baseapp.view.activity.EvaluateDetailActivity"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <TextView
        android:id="@+id/tv_HostEvaluate"
        android:padding="15dp"
        android:hint="店主未填写"
        android:gravity="left|top"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:textSize="13dp"
        android:textColor="@color/text_color1"
        android:background="@color/white"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="评星"
            android:textSize="13dp"
            android:textColor="@color/map_text1"/>
        <RatingBar
            android:id="@+id/rb_evaluate"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/myStar"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="0" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客服评价回复"
                        android:textSize="13dp"
                        android:textColor="@color/map_text1"/>
                    <TextView
                        android:id="@+id/tv_Stime"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017.08.10  13:01"
                        android:textSize="13dp"
                        android:textColor="@color/map_text1"/>
                </RelativeLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/linefull"/>
                <TextView
                    android:id="@+id/tv_SEvaluation"
                    android:paddingBottom="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="客服未填写"
                    android:textSize="13dp"
                    android:textColor="@color/text_color1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="品牌方评价回复"
                        android:textSize="13dp"
                        android:textColor="@color/map_text1"/>
                    <TextView
                        android:id="@+id/tv_Btime"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017.08.10  13:01"
                        android:textSize="13dp"
                        android:textColor="@color/map_text1"/>
                </RelativeLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/linefull"/>
                <TextView
                    android:id="@+id/tv_BEvaluation"
                    android:paddingBottom="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="品牌方未填写"
                    android:textSize="13dp"
                    android:textColor="@color/text_color1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
