<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimary">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_reason"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginBottom="30dp">
            <TextView
                android:id="@+id/tv_Progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_corner_blue"
                android:textColor="@color/map_text2"
                android:textSize="15dp"
                android:text="工程暂停中"/>
            <TextView
                android:id="@+id/tv_Reason"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:lines="3"
                android:textColor="@color/map_text1"
                android:text=""/>
        </LinearLayout>
        <!--店主信息-->
        <TextView

            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店主信息"
            android:textColor="@color/map_text1"/>
        <com.jyt.baseapp.view.widget.ItemText
            android:id="@+id/it_ShopName"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:leftText="店名"
            app:rightText=""
            app:rightcolor="@color/text_color1"/>
        <com.jyt.baseapp.view.widget.ItemText
            android:id="@+id/it_Number"
            android:layout_marginTop="1.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:leftText="编号"
            app:rightText=""
            app:rightcolor="@color/text_color1"/>
        <com.jyt.baseapp.view.widget.ItemText
            android:id="@+id/it_UserName"
            android:layout_marginTop="1.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:leftText="店主姓名"
            app:rightText=""
            app:rightcolor="@color/text_color1"/>
        <com.jyt.baseapp.view.widget.ItemText
            android:id="@+id/it_ShopPhone"
            android:layout_marginTop="1.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:leftText="联系电话"
            app:rightText=""
            app:rightcolor="@color/map_text2"/>
        <com.jyt.baseapp.view.widget.ItemText
            android:id="@+id/it_Address"
            android:layout_marginTop="1.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:leftText="地址"
            app:rightText=""
            app:rightcolor="@color/text_color1"/>
        <com.jyt.baseapp.view.widget.ItemText
            android:id="@+id/it_Time"
            android:layout_marginTop="1.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:leftText="启动时间"
            app:rightText=""
            app:rightcolor="@color/text_color1"/>
        <!--装修员工信息-->
        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="装修员信息"
            android:textColor="@color/map_text1"/>
        <com.jyt.baseapp.view.widget.ItemText
            android:id="@+id/it_Brand"
            android:layout_marginTop="1.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:leftText="装修品牌"
            app:rightText=""
            app:rightcolor="@color/text_color1"/>
        <com.jyt.baseapp.view.widget.ItemText
            android:id="@+id/it_BrandLevel"
            android:layout_marginTop="1.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:leftText="品牌级别"
            app:rightText=""
            app:rightcolor="@color/text_color1"/>
        <com.jyt.baseapp.view.widget.ItemText
            android:id="@+id/it_Commissioner"
            android:layout_marginTop="1.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:leftText="装修专员"
            app:rightText=""
            app:rightcolor="@color/text_color1"/>
        <com.jyt.baseapp.view.widget.ItemText
            android:id="@+id/it_CPhone"
            android:layout_marginTop="1.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:leftText="联系电话"
            app:rightText=""
            app:rightcolor="@color/map_text2"/>
        <!--跟进人员信息-->
        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跟进人员/联系电话"
            android:textColor="@color/map_text1"/>
        <com.jyt.baseapp.view.widget.ItemText
            android:id="@+id/it_Forecaster1"
            android:layout_marginTop="1.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:leftText="预测员"
            app:apppendText=""
            app:rightText=""
            app:rightcolor="@color/map_text2"/>
        <com.jyt.baseapp.view.widget.ItemText
            android:id="@+id/it_Forecaster2"
            android:layout_marginTop="1.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:leftText="预测员"
            app:apppendText=""
            app:rightText=""
            app:rightcolor="@color/map_text2"/>
        <com.jyt.baseapp.view.widget.ItemText
            android:id="@+id/it_Forecaster3"
            android:layout_marginTop="1.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:leftText="预测员"
            app:apppendText=""
            app:rightText=""
            app:rightcolor="@color/map_text2"/>
        <com.jyt.baseapp.view.widget.ItemText
            android:id="@+id/it_Forecaster4"
            android:layout_marginTop="1.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:leftText="预测员"
            app:apppendText=""
            app:rightText=""
            app:rightcolor="@color/map_text2"/>
        <!--店主评价-->
        <com.jyt.baseapp.view.widget.ItemText
            android:id="@+id/item_Evaluate"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:leftText="评价"
            app:showIV="true"/>
        <RelativeLayout
            android:id="@+id/rl_push"
            android:layout_marginTop="1.5dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="该项目消息推送"
                android:textSize="13dp"
                android:textColor="@color/map_text1"/>
            <ch.ielse.view.SwitchView
                android:id="@+id/sv_Push"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>