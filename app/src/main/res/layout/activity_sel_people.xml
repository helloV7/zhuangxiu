    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.jyt.baseapp.view.widget.SearchView
        android:id="@+id/v_searchView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.jyt.baseapp.view.widget.SearchView>

    <com.jyt.baseapp.view.widget.RefreshRecyclerView
        android:id="@+id/v_refreshRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.jyt.baseapp.view.widget.RefreshRecyclerView>
</LinearLayout>