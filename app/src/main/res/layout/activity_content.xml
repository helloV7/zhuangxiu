<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.jyt.baseapp.view.widget.NoScrollViewPager
        android:id="@+id/vp_content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </com.jyt.baseapp.view.widget.NoScrollViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/bg_blue">
        <LinearLayout
            android:id="@+id/ll_content_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom">
            <ImageView
                android:id="@+id/iv_content_map"
                android:layout_marginBottom="3dp"
                android:layout_width="27dp"
                android:layout_height="21dp"
                android:src="@mipmap/map_off"/>
            <TextView
                android:id="@+id/tv_content_map"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="地图模式"
                android:textColor="@color/vp_text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_content_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom">
            <ImageView
                android:id="@+id/iv_content_project"
                android:layout_marginBottom="3dp"
                android:layout_width="27dp"
                android:layout_height="21dp"
                android:src="@mipmap/project_off"/>
            <TextView
                android:id="@+id/tv_content_project"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="工程查询"
                android:textColor="@color/vp_text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_content_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom">
            <ImageView
                android:id="@+id/iv_content_more"
                android:layout_marginBottom="3dp"
                android:layout_width="27dp"
                android:layout_height="21dp"
                android:src="@mipmap/more_off"/>
            <TextView
                android:id="@+id/tv_content_more"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="更多"
                android:textColor="@color/vp_text"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>