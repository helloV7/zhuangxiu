<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
    <style name="dialogBottomInOutAnim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="@android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>

    <style name="IPhoneDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="defaultTextStyle">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#1C1C1C</item>
    </style>

    <style name="MoveDialog">
        <item name="android:windowEnterAnimation">@anim/menu_bottombar_in</item>
        <item name="android:windowExitAnimation">@anim/menu_bottombar_out</item>
    </style>


    <declare-styleable name="LabelAndTextItem">
        <attr name="labelText" format="string"></attr>
        <attr name="valueText" format="string"></attr>
        <attr name="labelTextColor" format="color"></attr>
        <attr name="valueTextColor" format="color"></attr>
        <attr name="labelTextSize" format="dimension"></attr>
        <attr name="valueTextSize" format="dimension"></attr>
        <attr name="showRightArrow" format="boolean"></attr>
        <attr name="needInput" format="boolean"></attr>
        <attr name="hintText" format="string"></attr>
    </declare-styleable>
    <style name="myStar">
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
        <item name="android:progressDrawable">@drawable/progress_star</item>
    </style>

    <style name="bigButton">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/btn_big_sel</item>
        <item name="android:clickable">true</item>
    </style>
</resources>
